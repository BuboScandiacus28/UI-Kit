doctype html
html
	head
		meta(charset = 'utf-8')
		meta(name='viewport', content="initial-scale=1.0, width=device-width")
		title Webpack app

	include blocks/block-heading/heading.pug
	include blocks/block-button/button.pug
	include blocks/block-arrow-btn/arrow-btn.pug
	include blocks/block-svg-percentages/svg-percentages.pug
	include blocks/block-svg-chart/svg-chart.pug
	include blocks/block-slider/slider.pug
	include blocks/block-stages/stages.pug
	include blocks/block-form-elements/form.pug
	include blocks/block-search/search.pug
	include blocks/block-drop-down/drop-down.pug
	include blocks/block-user-profile/user-profile.pug
	include blocks/block-news-events/news-events.pug

	body
		main.page
			.page__wrapper
				
				section.btn-section
					.btn-section__wrapper
						+heading("standard buttons")
						div(class="btn-section__content-box content-box")
							+button("button", "#", "green_btn_theme ripple", "small_button")
							+button("button", "#", "green_btn_theme ripple")
							+button("button", "#", "red_btn_theme ripple")
							+button("button", "#", "red_btn_theme ripple", "small_button")
				
				section.btn-arrow-section
					.btn-arrow-section__wrapper
						+heading("arrow buttons")
						div(class="btn-arrow-section__content-box content-box")
							+arrow-btn("left", "green_theme_arrow")
							+arrow-btn("right", "green_theme_arrow")
				
				section.chart-section
					.chart-section__wrapper
						+heading("percentages / pie chart")
						div(class="chart-section__content-box content-box")
							+percentages("0", ["#e75735", '0'], true)
							+percentages("38", ["#e75735", '38'], true)
							+percentages("62", ["#e75735", '62'], true)
							+percentages("89", ["#e75735", '89'], true)
							+chart([
								["#747474", "10"],
								["#e75735", "20"],
								["#4eb7a8", "30"]
								],
								true
								)
				
				section.slider-section
					.slider-section__wrapper
						+heading("sliders")
						div(class="slider-section__content-box content-box")
							+slider("red_slider_theme", "placeholder-slider")
							+slider("green_slider_theme", "ruler-slider")
				
				section.stages-section
					.stages-section__wrapper 
						+heading("stages")
						+stages({
							cardinality: "5",
							currentPoint: "3",
							theme: "stages_color_theme"
						})

				section.forms-section
					.forms-section__wrapper
						+heading("form elements")
						.forms-section__content-container
							.forms-section__form-example
								+form({
									theme: "color_theme"
								})
							.forms-section__form-component
								.forms-section__toggles
									+heading("toggles")
									+toggles({
										theme: "tgl-theme"
									})
								.forms-section__tick-boxes
									+heading("tick boxes")
									+tick-boxes({
										theme: "tcb-theme"
									})

				section.profile-search-list
					.profile-search-list__wrapper
						.search-drop-down-section
							.search-drop-down-section__wrapper
								+heading("search / drop down")
								.search-drop-down-section__search
									+search({
										theme: "search_color_theme",
										file: "##",
										method: "get",
										hit: "Search"
									})
								.search-drop-down-section__drop-down
									+dropdown({
										theme: "drop-down_color_theme",
										mainText: "Choose An Option",
										itemList: [
											{
												href: "##",
												text: "This is option 1"
											}, {
												href: "##",
												text: "This is option 2"
											}, {
												href: "##",
												text: "This is option 3"
											}, {
												href: "##",
												text: "This is option 4"
											}
										]
									})
						.user-profile-section
							.user-profile-section__wrapper
								+heading("user profile")
								.user-profile-section__content
									+user-profile({
										theme: "user-profile_red_theme",
										img: "assets/img/user-man.png",
										name: "John Smith",
										job: "ux designer",
										linkList: [
											{
												href: "##",
												icon: "assets/img/facebook.svg#icon-facebook"
											}, {
												href: "##",
												icon: "assets/img/twitter.svg#icon-twitter"
											}, {
												href: "##",
												icon: "assets/img/dribbble.svg#icon-dribbble"
											}
										]
									})
									+user-profile({
										theme: "user-profile_green_theme",
										img: "assets/img/user-woman.png",
										name: "Sarah Brown",
										job: "developer",
										linkList: [
											{
												href: "##",
												icon: "assets/img/facebook.svg#icon-facebook"
											}, {
												href: "##",
												icon: "assets/img/twitter.svg#icon-twitter"
											}, {
												href: "##",
												icon: "assets/img/dribbble.svg#icon-dribbble"
											}
										]
									})

				section.news-events-section
					.news-events-section__wrapper
						+heading("news & events")
						.news-events-section__content
							+news-events({
								theme: "news_color_theme",
								img: "assets/img/news-img.png",
								type: "news",
								title: "It's all going downhill",
								date: "24 august 2013",
								text: "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed condimentum aliquet venenatis. Etiam a nisi nunc, a tincidunt eros."
							})
							+news-events({
								theme: "events_color_theme",
								img: "assets/img/event-img.png",
								type: "events",
								date: "24",
								month: "Aug",
								title: "this is the title",
								text: "Lorem ipsum dolor sit amet, consectetur adipiscing elit.",
								href: "##",
								linkText: "add to calendar"
							})




				

				

