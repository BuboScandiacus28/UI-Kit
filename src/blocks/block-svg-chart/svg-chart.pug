mixin chart(content)
	svg(width="100%" height="100%" viewBox="0 0 42 42" class="donut")
		circle(class="donut__hole" cx="21" cy="21" r="15.91549430918954" fill="#fff")
		circle(class="donut__ring" cx="21" cy="21" r="15.91549430918954" fill="transparent" stroke="#e5e5e5" stroke-width="6")
		- var sumSize = 0;
		- var shift;
		each val in content
			- var size = val[1];
			if (sumSize)
				- shift = 100 - sumSize + 25;
			else
				- shift = 25;
			- sumSize += +size;
			-	var color = val[0];
			-	var residue = 100 - +size;
			circle(class="donut__segment" cx="21" cy="21" r="15.91549430918954" fill="transparent" stroke=color stroke-width="6" stroke-dasharray=size + " " + residue stroke-dashoffset=shift)